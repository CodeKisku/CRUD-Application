 <!-- form handling -->
 <form action="/api/users" method="POST" id="add_user">
  <div class="new_user">
   <div class="form-group">
     <label for="name" class="text-light">Name</label>
     <input type="hidden" name="id" value="">
     <input type="text" name="name" value="" placeholder="Enter Full Name">
 </div>
 <div class="form-group">
     <label for="email" class="text-light">Email</label>
     <input type="text" name="email" value="" placeholder="Enter Email Address">
 </div>
 <div class="form-group">
     <label for="phone" class="text-light">Phone</label>
     <input type="number" name="phone" value="" placeholder="Enter Phone Number">
 </div>
 <div class="form-group">
     <label for="gender" class="text-light">Gender</label>
     <div class="radio inline">
         <input type="radio" id="radio-2" name="gender" value="Male" >
         <label for="radio-2" class="radio-label">Male</label>
     </div>
     <div class="radio inline">
         <input type="radio" id="radio-3" name="gender" value="Female" >
         <label for="radio-3" class="radio-label">Female</label>
     </div>
 </div>
 <div class="form-title text-center">
   <h3 class="text-dark">Booking Details</h3>
 </div>
 <div class="form-group">
   <label for="booking_id" class="text-light">Booking ID</label>
   <input type="number" name="booking_id" value="" placeholder="Enter Booking ID">
 </div>
 <div class="form-group">
   <label for="location_id" class="text-light">Location ID</label>
   <input type="text" name="location_id" value="" placeholder="Enter Location ID">
 </div>
 <div class="form-group">
   <label for="drone_shot_id" class="text-light">Drone-shot ID</label>
   <input type="number" name="drone_shot_id" value="" placeholder="Enter Drone Shot ID">
 </div>
 <div class="form-group">
   <label for="created_time" class="text-light">Created Time</label>
   <input type="time" name="created_time" value="" placeholder="">
 </div>
 <div class="form-group">
   <label for="created_date" class="text-light">Created Date</label>
   <input type="date" name="created_date" value="" placeholder="">
 </div>

 <div class="form-group">
     <button type="submit" class="btn text-dark update">Save</button>
 </div>
  </div>
</form>